<%= simple_form_for [chat, message], html: { class: "rm8-composer-form" } do |f| %>
  <div class="rm8-composer-card">
    <%= f.input :content,
      label: false,
      required: true,
      placeholder: "e.g., Marrickville, intermediate, Tue 8pm. Need a short outreach message + backup court.",
      input_html: { class: "rm8-composer-input", rows: 3 } %>

    <div class="rm8-composer-actions">
      <%= f.button :submit, "Send", class: "rm8-btn rm8-btn-primary" %>
    </div>
  </div>
<% end %>
