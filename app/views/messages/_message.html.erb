<% if message.role == "user" %>
  <div class="rm8-message-row rm8-message-row-user">
    <div class="rm8-message-bubble rm8-message-bubble-user">
      <div class="rm8-message-label">You</div>
      <%= simple_format(message.content) %>
    </div>
  </div>
<% elsif message.role == "assistant" %>
  <div class="rm8-message-row rm8-message-row-assistant" id="<%= dom_id(message) %>">
    <div class="rm8-message-bubble rm8-message-bubble-assistant">
      <div class="rm8-message-label">Racket M8</div>
      <%= message.content.present? ? simple_format(message.content) : content_tag(:span, "Thinkingâ€¦", class: "rm8-thinking") %>
    </div>
  </div>
<% end %>
